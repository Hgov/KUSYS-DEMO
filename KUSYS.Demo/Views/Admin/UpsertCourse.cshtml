@using KUSYS.Core.Entities.DataTransferObjects;
@model UpsertCourseModel

@{
    var modelIsNull = Model?.Id != null;
    ViewData["Title"] = modelIsNull ? "Update course" : "Create course";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <h5 class="card-header">@(modelIsNull ? "Update course" : "Create course")</h5>
            <div class="card-body">
                <form asp-action="UpsertCourse">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CourseCode"></label>
                        <input asp-for="CourseCode" class="form-control" />
                        <span asp-validation-for="CourseCode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <a asp-controller="Admin" asp-action="Courses" class="btn btn-link">Courses</a>
                        <button type="submit" class="btn btn-primary">
                            @(modelIsNull ? "Update" :
                                "Create")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
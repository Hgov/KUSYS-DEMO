@using KUSYS.Core.Entities;
@model List<Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="card">
    <div class="card-header d-flex">
        <h5 class="me-auto">Courses</h5>
        <div class="d-inline-block">
            <a asp-action="UpsertCourse" class="btn btn-primary btn-sm">Add</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Ops</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model ?? new())
                {
                    <tr>
                        <td>@item.CourseCode</td>
                        <td>@item.Name</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="UpsertCourse" asp-route-id="@item.CourseId">
                                    <span class="btn btn-sm btn-primary me-2">Edit</span>
                                </a>
                                <form asp-action="DeleteCourse" asp-route-id="@item.CourseId">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@using KUSYS.Core.Entities;
@model List<User>

@{
    ViewData["Title"] = "Users";
}

<div class="card">
    <div class="card-header d-flex">
        <h5 class="me-auto">Users</h5>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>Ops</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model ?? new())
                {
                    <tr>
                        <td>@item.FirstName @item.LastName</td>
                        <td>
                            <a asp-action="ViewUser" asp-route-id="@item.Id" class="btn btn-sm btn-primary">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>